<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_pressed="true"> <!-- if pressed -->
		 <layer-list>
         <item android:right="-2dp" android:top="2dp" android:left="2dp">
            <shape>
                <corners android:radius="3dp" />
                <padding android:right="30dp"/>
            </shape>
        </item> 
        <item android:bottom="1.5dp" android:left="1dp">
            <shape>
                 <gradient
	            android:startColor="#E8E8E8"
	            android:endColor="#E8E8E8"
	            android:angle="270" />
                <stroke
	            android:width="2dp"
	            android:startColor="#E8E8E8"
	            android:endColor="#E8E8E8"/><!-- outline Color -->
                <corners
	            android:radius="20dp"
	            android:bottomLeftRadius="-3dp"
	             />
                <padding 
                android:bottom="7dp" 
                android:left="10dp" 
                android:right="15dp" 
                android:top="10dp" />
            </shape>
        </item>
    </layer-list>
	</item>
	
    
   <item>
