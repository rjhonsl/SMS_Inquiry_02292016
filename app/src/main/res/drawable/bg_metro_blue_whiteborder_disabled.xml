<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item android:right="-1dp" android:top="4dp" android:left="2dp" android:bottom="-5dp">
                <shape android:shape="rectangle">
                    <solid android:color="#3b3d3b3a" />
                    <corners android:radius="10dp" android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp"/>
                </shape>
            </item>
            <item android:bottom="4dp" android:left="1dp">
                <shape>
                    <gradient
                        android:endColor="#9392a6cc"
                        android:centerColor="#3b9ad7"
                        android:startColor="#3ca4e2"
                        android:angle="-45"/>
                    <stroke
                        android:color="#16e0e2f1"
                        android:width="1sp"/><!-- outline Color -->
                    <corners
                        android:radius="3dp" />
                    <padding
                        android:right="10dp"
                        android:left="10dp"
                        android:top="12dp"
                        android:bottom="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>