<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_activated="true">
        <layer-list>
            <item android:right="1dp"
                  android:top="2dp"
                  android:left="1dp">
                <shape>
                    <corners android:topLeftRadius="10dp" android:topRightRadius="10dp" />
                    <solid android:color="#b3b0b0" />
                </shape>
            </item>
            <item android:bottom=".3dp" android:left="0dp">
                <shape>
                    <gradient
                        android:startColor="#c6c6c6"
                        android:endColor="#c2c2c2"
                        android:angle="270" />
                    <stroke
                        android:width="1dp"
                        android:color="#c3c3c3"/><!-- outline Color -->
                    <corners
                        android:topLeftRadius="10dp" android:topRightRadius="10dp"
                        android:bottomLeftRadius="1dp" android:bottomRightRadius="1dp"
                        />
                    <padding
                        android:left="10dp"
                        android:right="10dp"
                        android:bottom="2dp"
                        android:top="2dp"
                        />
                </shape>
            </item>
        </layer-list>
    </item>


    <item>
        <layer-list>
            <item android:right="1dp"
                  android:top="2dp"
                  android:left="1dp">
                <shape>
                    <corners android:topLeftRadius="10dp" android:topRightRadius="10dp" />
                    <solid android:color="#c7c4c4" />
                </shape>
            </item>
            <item android:bottom=".3dp" android:left="0dp">
                <shape>
                    <gradient
                        android:startColor="#e1e1e1"
                        android:endColor="#dddddd"
                        android:angle="270" />
                    <stroke
                        android:width="1dp"
                        android:color="#d8d8d8"/><!-- outline Color -->
                    <corners
                        android:topLeftRadius="10dp" android:topRightRadius="10dp"
                        android:bottomLeftRadius="1dp" android:bottomRightRadius="1dp"
                        />
                    <padding
                        android:left="10dp"
                        android:right="10dp"
                        android:bottom="2dp"
                        android:top="2dp"
                        />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
