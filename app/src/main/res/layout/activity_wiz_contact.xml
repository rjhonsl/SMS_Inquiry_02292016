<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#636771"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp"
            android:text="Contact Information"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_weight="5"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom" android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#606060"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp"
                android:text="Name"
                android:layout_weight="5"
                />

            <EditText
                android:padding="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#587b95"
                android:inputType="textCapWords"
                android:hint="ex. Sample"
                android:maxLength="10"
                android:ems="10"
                android:background="#00000000"
                android:layout_weight="1"
                android:id="@+id/txt_wiz_contactName"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#85a5a5a5"/>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom" android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#606060"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp"
                android:text="@string/lbl_contactnum"
                android:layout_weight="5"
                android:id="@+id/textView21"/>

            <EditText
                android:padding="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColor="#587b95"
                android:layout_weight="1"
                android:hint="ex. 9151234567"
                android:background="#00000000"
                android:maxLength="10"
                android:ems="10"
                android:id="@+id/txt_wiz_contactNum"/>

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#85a5a5a5"/>

    </LinearLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#373737"
            android:text="Cancel Setup"
            android:background="@drawable/bg_material_transparent"
            android:id="@+id/btn_wiz_contact_cancelSetup"
            />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/btn_wiz_contact_Next"
            android:layout_weight="1"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:background="@drawable/bg_material_transparent"
            android:contentDescription="Next"/>

    </LinearLayout>


</RelativeLayout>