<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
                android:padding="10dp">

    <TextView
        android:id="@+id/lbl_dialog_filter"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="6dp"
        android:text="Filter by:"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!--date -->

    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/btn_filter_clear"
        android:drawableRight="@drawable/ic_removefilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:padding="10dp"
        android:id="@+id/dialog_filter_divider1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#78b4dc"
        android:layout_below="@id/lbl_dialog_filter"
        ></View>


    <!--date -->
    <TextView
        android:layout_below="@id/dialog_filter_divider1"
        android:padding="4dp"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/btn_filter_date"
        android:text="Date"
        android:drawableRight="@drawable/grey_arrow_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <!--branch -->
    <TextView
        android:layout_below="@id/btn_filter_date"
        android:padding="4dp"
        android:textSize="19sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/btn_filter_branch"
        android:drawableRight="@drawable/grey_arrow_right"
        android:text="Branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <!--answer -->
    <TextView
        android:layout_below="@id/btn_filter_branch"
        android:padding="4dp"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawableRight="@drawable/grey_arrow_right"
        android:id="@+id/btn_filter_answer"
        android:text="Reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <View
        android:id="@+id/dialog_filter_divider2"
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#78b4dc"
        android:layout_below="@id/btn_filter_answer"
        ></View>



</RelativeLayout><!-- From: file:/C:/Android%20Studio%20Projects/SMS%20Inquiry/app/src/main/res/layout/dialog_filter.xml -->