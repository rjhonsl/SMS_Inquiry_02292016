<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/editText_sendNewMessage_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="7dp"
            android:text="New Message"
            android:textSize="18sp"
            />
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="7dp"
            android:paddingTop="0dp"
            android:id="@+id/summary"
            android:layout_below="@id/editText_sendNewMessage_number"
            android:text="Create new message"
            android:textSize="15sp"
            android:textColor="#808080"
             />

        <ListView
            android:id="@+id/ListView_mainThread"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/summary"
            >
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/blue_100"
        android:visibility="gone" >

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_margin="6dp"
            android:layout_toLeftOf="@+id/button_inbox_send"
            android:background="#FFFFFF"
            android:gravity="top|left"
            android:maxHeight="200dp"
            android:padding="5dp"
            android:scrollbarSize="4dp"
            android:scrollbars="vertical" />
        <ImageButton
            android:id="@+id/button_inbox_send"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:contentDescription="Send"
            android:src="@drawable/ic_send_message" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/C:/Android%20Studio%20Projects/SMS%20Inquiry/app/src/main/res/layout/activity_inbox.xml -->