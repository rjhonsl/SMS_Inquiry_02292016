<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:gravity="center|center_vertical"
        android:padding="10dp" >
        
        <EditText
            android:id="@+id/editText_Home_PinCode"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:inputType="textPassword"
            android:ems="10"
            android:focusable="false"
            android:maxLength="4"
            android:textSize="33sp" />

        <!-- Row 1 -->

        <Button
            android:id="@+id/button_1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/editText_Home_PinCode"
            android:layout_marginLeft="3dp"
            android:text="1" 
            android:background="@drawable/background_button_pincode"
            android:textSize="30dp"
            android:textColor="#EDEFF0"
            />

        <Button
            android:id="@+id/button_2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/editText_Home_PinCode"
            android:layout_toRightOf="@+id/button_1"
            android:text="2" 
            android:background="@drawable/background_button_pincode"
            android:textSize="30dp"
            android:textColor="#EDEFF0"
            />

        <Button
            android:id="@+id/button_3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/editText_Home_PinCode"
            android:layout_toRightOf="@+id/button_2"
            android:text="3" 
            android:background="@drawable/background_button_pincode"
            android:textSize="30dp"
            android:textColor="#EDEFF0"
            />

        <!-- Row 2 -->

        <Button
            android:id="@+id/button_4"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/button_1"
            android:layout_marginLeft="3dp"
            android:text="4" 
            android:background="@drawable/background_button_pincode"
            android:textSize="30dp"
            android:textColor="#EDEFF0"
            />

        <Button
            android:id="@+id/button_5"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/button_1"
            android:layout_toRightOf="@+id/button_4"
            android:text="5" 
            android:background="@drawable/background_button_pincode"
            android:textSize="30dp"
            android:textColor="#EDEFF0"
            />

        <Button
            android:id="@+id/button_6"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/button_1"
            android:layout_toRightOf="@+id/button_5"
            android:text="6" 
            android:background="@drawable/background_button_pincode"
            android:textSize="30dp"
            android:textColor="#EDEFF0"
            />

        <!-- Row 3 -->

        <Button
            android:id="@+id/button_7"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/button_4"
            android:layout_marginLeft="3dp"
            android:text="7" 
            android:background="@drawable/background_button_pincode"
            android:textSize="30dp"
            android:textColor="#EDEFF0"
            />

        <Button
            android:id="@+id/button_8"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/button_4"
            android:layout_toRightOf="@+id/button_7"
            android:text="8" 
            android:background="@drawable/background_button_pincode"
            android:textSize="30dp"
            android:textColor="#EDEFF0"
            />

        <Button
            android:id="@+id/button_9"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/button_4"
            android:layout_toRightOf="@+id/button_5"
            android:text="9" 
            android:background="@drawable/background_button_pincode"
            android:textSize="30dp"
            android:textColor="#EDEFF0"
            />

        <!-- Row 4 -->
        
        <Button
            android:id="@+id/button_clear"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/button_7"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/button_8"
            android:text="C" 
            android:background="@drawable/background_button_pincode"
            android:textSize="30dp"
            android:textColor="#EDEFF0"
            />

        <Button
            android:id="@+id/button_0"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/button_8"
            android:layout_toRightOf="@+id/button_7"
            android:text="0" 
            android:background="@drawable/background_button_pincode"
            android:textSize="30dp"
            android:textColor="#EDEFF0"
            />
        
         <ImageButton
            android:id="@+id/button_backspace"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/button_7"
            android:layout_toRightOf="@+id/button_8"
            android:layout_marginLeft="3dp"
            android:src="@drawable/white_arrow_left"
            android:visibility="gone"
            android:background="@drawable/background_button_pincode"
            android:textColor="#EDEFF0"
            />

        <!-- Row 5 -->
        <Button
            android:id="@+id/button_home_OK"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/button_0"
            android:layout_marginLeft="3dp"
            android:text="OK" 
            android:background="@drawable/button_answer"
            android:textSize="25dp"
            android:textColor="#EDEFF0"
            />
        
        <TextView 
            android:id="@+id/textView_retrieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/button_home_OK"
            android:visibility="gone"
            android:text="Forgot password? Click here"
            android:textColor="#FFFFFF"
            android:layout_below="@id/button_home_OK"
            android:textSize="11sp"
            />
    </RelativeLayout>

</ScrollView><!-- From: file:/C:/Android%20Studio%20Projects/SMS%20Inquiry/app/src/main/res/layout/dialog_pin.xml -->