<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:fadingEdge="vertical"
    android:orientation="vertical"
    android:paddingLeft="3dp" 
    android:paddingRight="3dp"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="1dp"
        android:paddingLeft="9dp"
        android:background="@drawable/btn_white_bluegrey_shadowed" >

        <ImageView
            android:id="@+id/icon"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_marginLeft="10dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_account_circle_black_24dp"/>

        <TextView
            android:id="@+id/textview_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="#2b2b2b"
            android:textSize="19sp"
            android:layout_toRightOf="@id/icon"
            />

        <TextView
            android:id="@+id/textview_contact_number"
            android:layout_toRightOf="@id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_contact_name"
            android:text="Number"
            android:layout_marginLeft="15dp"
            android:textColor="#CC494949"
            android:textSize="17sp" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/C:/Android%20Studio%20Projects/SMS%20Inquiry/app/src/main/res/layout-large-mdpi/item_listview_contacts_display.xml -->