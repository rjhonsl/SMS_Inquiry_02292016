<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true"> <!-- if pressed -->
		<shape>
            <solid android:color="#b7e4fd" />
            <stroke android:width="3dp" 
                android:color="#b7e4fd" />
            <corners android:radius="3dp" />
            <padding 
                android:bottom="10dp" 
                />
        </shape>
	</item>
	
    <item android:state_activated="true"> <!-- if pressed -->
		<shape>
            <solid android:color="#94B8CD" />
            <stroke android:width="3dp" 
                android:color="#94B8CD" />
            <corners android:radius="3dp" />
            <padding 
                android:bottom="10dp" 
                />
        </shape>
	</item>
	
	<item>
    <layer-list>
        <item android:right="3dp" android:top="2dp" android:left="3dp" >
            <shape>
                <corners android:radius="12dp" />
                <gradient
                    android:startColor="#7e7883"
                    android:centerColor="#000000"
                    android:endColor="#11333333"
                    android:angle="270" />
            </shape>
        </item>
        <item android:bottom="5dp" android:left="1.2dp">
            <shape>
                 <gradient
	            android:startColor="#f1f1f1"
	            android:endColor="#e8e8e8"
	            android:angle="270" />
                <stroke
	            android:width="1dp"
	            android:startColor="#e6e6e6"
	            android:endColor="#e6e6e6"/><!-- outline Color -->
                <corners
	            android:radius="10dp" />
                <padding
	            android:bottom="4dp" />
            </shape>
        </item>
    </layer-list>
</item>
